<Window x:Class="LearningWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningWPF"
        xmlns:v="clr-namespace:LearningWPF.View"
        mc:Ignorable="d"
        Title="Cooking Book" Height="900" Width="1150" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:AppMain/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentViewCategory}"/>
    </Grid>
</Window>
    

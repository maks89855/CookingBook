<UserControl x:Class="LearningWPF.View.ItemsListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningWPF.View"
             mc:Ignorable="d" 
             Width="240" Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/LearningWPF;component/Resourse/ItemList.png"/>
        <TextBlock Grid.Column="1" FontSize="14" FontFamily="Arial" 
                   Text="{Binding Path=NameRecipe}" 
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Padding="5"/>
    </Grid>
</UserControl>

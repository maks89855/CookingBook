<UserControl x:Class="LearningWPF.View.ItemsListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningWPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="298" Width="298" Height="40">
    <Grid Width="298" Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Image Source="Снимок экрана (4).png"/>
        <TextBlock Grid.Column="1" FontSize="18" Text="{Binding Path=NameRecipe}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>

<UserControl x:Class="LearningWPF.View.RecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningWPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="870" d:DesignWidth="894">
    
    <Grid Visibility="{Binding SelectedRecipe, Converter={StaticResource SelectedRecipeConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding SelectedRecipe.NameRecipe}" 
                Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}" 
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                />
        <Label Content="{Binding SelectedRecipe.NameRecipe}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="20" FontFamily="Arial"
               Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}"/>
        <Grid Grid.Row="1" Background="White">
            <Image Grid.Row="1"  Source="{Binding SelectedRecipe.ImagePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"/>
            <Button Style="{DynamicResource AddImageButton}" Width="400px"
                    Command="{Binding AddImageCommand}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}" 
                    Background="{x:Null}" BorderBrush="Transparent" Cursor="Hand">
                <Image Grid.Row="1" Source="{Binding SelectedRecipe.ImagePath,
                        FallbackValue={StaticResource DefaultContactImage},
                        TargetNullValue={StaticResource DefaultContactImage}}"/>
            </Button>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Padding="10 0 0 0" Text="Состав" Background="White"/>
            <Label Grid.Row="1" Content="{Binding SelectedRecipe.СompositionOfTheDish}"
               FontSize="14" FontFamily="Arial"
               Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}"/>
            <TextBox Grid.Row="1" Text="{Binding SelectedRecipe.СompositionOfTheDish}"
                     AcceptsReturn="True"
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}" 
                     SpellCheck.IsEnabled="True"/>

        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Padding="10 0 0 0" Text="Способ приготовления" Background="White"/>
            <Label Grid.Row="1"  Content="{Binding SelectedRecipe.CookingMethod}"
               FontSize="14" FontFamily="Arial"
               Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}"/>
            <TextBox Grid.Row="1"  Text="{Binding SelectedRecipe.CookingMethod}"
                     AcceptsReturn="True"
                 Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}"/>
        </Grid>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Style="{StaticResource EditButton}" Command="{Binding EditCommand}" 
                CommandParameter="{Binding SelectedRecipe}"  
                Visibility="{Binding IsDisplayMode, Converter={StaticResource IsEditConverter}}"
                Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Image Source="/LearningWPF;component/Resourse/EditImage.png" Height="16" Width="18" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
        <Button Style="{StaticResource DeleteButton}" 
                Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top"
                Command="{Binding SaveCommand}"
                Visibility="{Binding IsEditMode, Converter={StaticResource IsEditConverter}}">
            <Image Source="/LearningWPF;component/Resourse/SaveIcon.ico" 
                   Height="16" Width="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
